<body>
    <div class="menu-btn">
        <i class="fas fa-bars fa-2x"></i>
    </div>

    <div class="container">
        <div class="background-box"></div>
        <div class="background-image"></div> <!-- Added -->
        <!-- Nav -->
        <nav class="main-nav">
            <img src="../assets/images/annada.jpeg" alt="logo" class="logo" />
